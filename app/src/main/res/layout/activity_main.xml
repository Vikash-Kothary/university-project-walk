<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/year_slider_container"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:max="15"
        android:orientation="horizontal">
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#00FF7F"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Environment"
            android:textColor="#FFFFFF"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FF7F"
            android:layout_marginTop="40dp">



            <Button
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:id="@+id/button_cloud"
                android:text="@string/icon_cloud"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                android:onClick="onClick"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:id="@+id/button_fuel"
                android:text="@string/icon_fuel"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                android:onClick="onClick2"
                />

            <Button
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:id="@+id/button_tree"
                android:text="@string/icon_tree"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                android:onClick="onClick3"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinner"
                android:layout_weight="1"
                android:entries="@array/country"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                />



        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:text="Number of tress in each country"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type something hello something hello somethinghelloType something hello something hello somethinghelloType something hello something hello somethinghelloType something hello something hello somethinghelloType something hello something hello somethinghello"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:gravity="left"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="1dp"
        android:lineSpacingExtra="5dp"
         />

    <LinearLayout
        android:id="@+id/leaderboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

    </LinearLayout>


</LinearLayout>
